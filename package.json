{
  "name": "routing-controllers-openapi",
  "version": "4.0.0b3",
  "description": "Runtime OpenAPI v3 spec generation for routing-controllers",
  "keywords": [
    "routing-controllers",
    "class-validator",
    "openapi",
    "swagger"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:epiphone/routing-controllers-openapi",
  "author": "Aleksi Pekkala <aleksipekkala@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf coverage build",
    "build": "npm run clean && tsc -p tsconfig.json",
    "format": "prettier --write {src,__tests__}/**/*.ts",
    "test:format": "prettier --check {src,__tests__}/**/*.ts",
    "test:lint": "tslint --project . src/**/*.ts",
    "prepare": "npm run build",
    "send-coverage": "codecov -f coverage/*.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "routing-controllers": "https://github.com/martinhamel/pictaccio-routing-controllers.git",
    "lodash.capitalize": "^4.2.1",
    "lodash.merge": "^4.6.2",
    "lodash.startcase": "^4.4.0",
    "openapi3-ts": "^3.2.0",
    "path-to-regexp": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.4.1",
    "entities": "^6.0.0"
  },
  "devDependencies": {
    "@types/entities": "^2.0.2",
    "@types/jest": "^29.2.4",
    "@types/lodash.capitalize": "^4.2.6",
    "@types/lodash.merge": "^4.6.6",
    "@types/lodash.startcase": "^4.4.6",
    "@types/node": "^16.18.3",
    "@types/prettier": "^2.2.2",
    "@types/reflect-metadata": "^0.1.0",
    "@types/validator": "^13.7.10",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0-b3",
    "class-validator-jsonschema": "^5.1.0",
    "codecov": "^3.8.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.9.3",
    "rimraf": "^6.0.1"
  }
}